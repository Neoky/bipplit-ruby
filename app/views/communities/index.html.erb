<p id="notice"><%= notice %></p>

<div class="row">
  <h1>Communities</h1>
</div>

<div class="row">
  <div class="col-md-10">
    <% @communities.each do |community| %>
      <h2><%= link_to community.title, community_path(community) %></h2>
      <%= community.body %><br />
      <% if signed_in? and community.user_id == current_user.id %>
        <%= link_to 'Edit', edit_community_path(community), :class=>"btn btn-info btn-sm" %>
        <%= link_to 'Destroy', community, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger btn-sm" %>
      <% end %>
      <hr />
    <% end %>
  </div>

  <div class="col-md-2">
    <% if signed_in? %>
      <%= link_to 'Create Community', new_community_path, :class=>"btn btn-primary" %>
    <% end %>
  </div>
</div>

