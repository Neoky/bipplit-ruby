<p id="notice"><%= notice %></p>

<h1>
  <%= @community.title %>
  <small>/c/<%= @community.url %></small>
</h1>

<p>
  <%= @community.body %>
</p>

<% if signed_in? and @community.user_id == current_user.id %>
	<%= link_to 'Edit', edit_community_path(@community), :class=>"btn btn-info btn-sm" %> |
	<%= link_to 'Back', communities_path, :class=>"btn btn-default btn-sm" %>
<% end %>

<%= render 'blogs/index', blogs: @blogs, community: @community %>
