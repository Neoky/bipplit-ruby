<p id="notice"><%= notice %></p>

<p>
  <h2><%= @blog.title %></h2>
</p>

<p>
  <%= RedCloth.new(@blog.body).to_html.html_safe %>
</p>

<p>
  <strong>User:</strong>
  <%= @blog.user_id %>
</p>

<p>
  <strong>Community:</strong>
  <%= @blog.community_id %>
</p>

<% if @blog.user_id == current_user.id %>
	<%= link_to 'Edit', edit_blog_path(@blog) %> |
	<%= link_to 'Back', blogs_path %>
<% end %>

<div id="new_comment">
	<%= render 'comments/form', comment: @comment, blog_id: @blog.id %>
</div>

<div id="comments">
	<%= render 'comments/index', blog: @blog, comments: @comments %>
</div>